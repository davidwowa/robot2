CC=g++
CFLAGS=-c -Wall
LIBFLAGS=-lwiringPi ../lib/HC-SR04-Raspberry-Pi-C-/libSonar.cpp -lpthread -lArduiPi_OLED

display.o: display.cpp
	$(CC) $(CFLAGS) $(LIBFLAGS) display.cpp
	
drive.o: drive.cpp
	$(CC) $(CFLAGS) $(LIBFLAGS) drive.cpp
	
wiring_pi.o: wiring_pi.cpp
	$(CC) $(CFLAGS) $(LIBFLAGS) wiring_pi.cpp
	
sonar.o: sonar.cpp
	$(CC) $(CFLAGS) $(LIBFLAGS) sonar.cpp
	
clean:
	rm *.o